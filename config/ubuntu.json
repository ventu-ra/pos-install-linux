{
  "packages": [
    "gnome-shell",
    "gnome-control-center",
    "gnome-bluetooth",
    "gdm3",
    "gnome-session",
    "bluez",
    "network-manager",
    "network-manager-gnome",
    "neovim",
    "cargo",
    "yarn",
    "npm",
    "libvirt",
    "virt-manager",
    "dnsmasq",
    "build-essential",
    "curl",
    "distrobox"
  ],
  "configurations": [
    {
      "command": "sudo apt install qemu-kvm virt-manager virtinst libvirt-clients bridge-utils libvirt-daemon-system -y",
      "description": " Install QEMU/KVM on Ubuntu"
    },
    {
      "command": "sudo systemctl enable --now libvirtd",
      "description": "Ativa o serviço de virtualização (libvirt)"
    },
    {
      "command": "gsettings set org.gnome.desktop.interface gtk-theme 'Adwaita-dark'",
      "description": "Define o tema do GNOME"
    },
    {
      "command": "sudo systemctl enable --now gdm3",
      "description": "Ativa o GDM (GNOME Display Manager)"
    }
  ]
}
